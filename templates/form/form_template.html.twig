{%  block form_template %}
    <div class="bootstrap-iso">
        <form method="post">
            <div class="form-group">
                <label for="form_debut">Date Debut</label>
                <input type="date" class="form-control" name="date" id="debut" placeholder="YYYY-MM-DD">
                <small id="debutHelp" class="form-text text-muted">Début de la période d'observation.</small>
            </div>
            <div class="form-group">
                <label for="form_fin">Date Fin</label>
                <input type="date" class="form-control" name="date" id="fin" placeholder="YYYY-MM-DD">
                <small id="finHelp" class="form-text text-muted">Fin de la période d'observation.</small>
            </div>
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </form>
    </div>
{% endblock %}